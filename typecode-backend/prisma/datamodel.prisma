type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  profile: String
  phoneNumber: String
  phoneNumberVerified: Boolean
  fcmToken: Token
  friends: [User!]
  rooms: [Room!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  deletedAt: DateTime @deletedAt
}

type Room {
  id: ID! @id
  userId: String!
  participants: [User!]!
  messages: [Message!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  deletedAt: DateTime @deletedAt
}

type Message {
  id: ID! @id
  text: String!
  from: User! @relation(name: "From")
  room: Room!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Token {
  id: ID! @id
  userId: String
  accessedAt: DateTime
  deleted: Boolean
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

